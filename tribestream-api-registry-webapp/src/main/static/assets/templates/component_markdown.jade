div(tabindex=0, ng-class="{'fullscreen': fullscreen}")
    .main(ng-class="{'sidebyside': sidebyside}")
        .value
            textarea(ng-model="value")
        .preview
            div.empty(x-ng-if="!preview && placeholder")
                span {{placeholder}}
            div(x-ng-bind-html="preview | tribeHtml")
            .edit-icon
                i.fa.fa-pencil
    div(data-tribe-field-actions,
    data-version="version",
    data-active="fieldDirty",
    data-on-confirm="onCommit()",
    data-on-cancel="onCancel()")
    div(data-tribe-markdown-help, data-visible="helpVisible")
