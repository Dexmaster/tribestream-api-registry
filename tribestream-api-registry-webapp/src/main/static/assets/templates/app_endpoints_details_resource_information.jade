div
  h2(app-endpoints-details-toc-anchor="Resource Information") Resource Information
  div
    div
      div(data-submenu="true", app-endpoints-details-toc-anchor="API Versions")
        span API Versions
        i(data-tribe-multiselect, data-selected-options="endpoint.operation['x-tribestream-api-registry']['api-versions']")
      div(data-submenu="true", app-endpoints-details-toc-anchor="Status")
        span Status
        i(data-tribe-editable-option, data-value="endpoint.operation['x-tribestream-api-registry'].status", data-options="statusOptions")
    div
      div(data-submenu="true", app-endpoints-details-toc-anchor="Request formats")
        span Request formats
        i(data-tribe-multiselect, data-available-options="requestFormatsOptions", data-selected-options="endpoint.operation.consumes")
      div(data-submenu="true", app-endpoints-details-toc-anchor="Response formats")
        span Response formats
        i(data-tribe-multiselect, data-available-options="responseFormatsOptions", data-selected-options="endpoint.operation.produces")
    div
      div.auth-method(data-submenu="true", app-endpoints-details-toc-anchor="Authentication method")
        span Authentication method
        i(data-tribe-multiselect, data-available-options="['basic', 'form', 'digest', 'HTTP Signatures', 'Bearer']", data-selected-options="endpoint.operation['x-tribestream-api-registry']['auth-methods']")
      div(data-submenu="true", app-endpoints-details-toc-anchor="Roles")
        span Roles
        i(data-tribe-multiselect, data-selected-options="endpoint.operation['x-tribestream-api-registry'].roles")
    div
      div(data-submenu="true", app-endpoints-details-toc-anchor="Categories")
        span Categories
        i(data-tribe-multiselect, data-selected-options="endpoint.operation['x-tribestream-api-registry'].categories")
      div(data-submenu="true", app-endpoints-details-toc-anchor="Tags")
        span Tags
        i(data-tribe-multiselect, data-selected-options="endpoint.operation.tags")
  .app-rates(data-submenu="true", app-endpoints-details-toc-anchor="Rates")
    div
      span Rate Limit
      div(x-ng-click="addRate()", tabindex=0)
        i.fa.fa-plus
    .rates(x-ng-repeat="rl in endpoint.rates")
      i(data-tribe-editable-number, data-adjust="false", data-value="rl.rateLimit")
      span requests /
      i(data-tribe-editable-number, data-adjust="false", data-value="rl.rateWindow")
      i(data-tribe-editable-option, data-value="rl.rateUnit", data-options="rateUnits")
      span Description
      i(data-tribe-editable-text, data-adjust="false", data-value="rl.description")
      div(x-ng-click="removeRate(rl)")
        i.fa.fa-trash
